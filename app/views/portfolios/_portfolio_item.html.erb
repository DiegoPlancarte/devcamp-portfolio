<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <p class="card-text">
        <span><%= portfolio_item.title%></span>
        <br>
        <%= portfolio_item.subtitle%>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to "View", portfolio_show_path(portfolio_item) %></button>
          <% if logged_in?(:site_admin)  %>
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <%= link_to 'Delete', portfolio_show_path(portfolio_item), method: :delete, data: {confirm: 'Are you sure?' } %>
            </button>
          <% end %>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago</small>
      </div>
    </div>
  </div>
</div>